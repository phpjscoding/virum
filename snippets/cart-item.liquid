<li class="cart-item grid grid-cols-1 md:grid-cols-12 gap-6 py-8 border-b border-gray-100 last:border-0" data-key="{{ item.key }}">
  <div class="md:col-span-2">
    <div class="aspect-square bg-gray-50 overflow-hidden border border-gray-100">
      {% if item.image %}
     <a href="{{ item.url }}">
        <img
        alt="{{ item.title }}"
        class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-500"
        referrerpolicy="no-referrer"
        src="{{ item.image | image_url:width:200 }}"
        loading="lazy"
        width="100"
        height="200"
      >
     </a>
        
      {% endif %}
      
    </div>
  </div>

  <div class="md:col-span-6 flex flex-col justify-between">
    <div>
      <h3 class="text-lg font-medium">
        <a
          href="/product/classic-cotton-tshirt"
          class="hover:underline focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 rounded"
        >
          {{ item.product.title }}
        </a>
      </h3>
      <p class="text-sm text-gray-500 mt-1">
        {% unless item.product.has_only_default_variant %}
           {% for option in item.options_with_values %}
             {{ option.name }} /
             {{ option.value }} 
           {% endfor %}
                
         {% endunless %}
                    </p>
      <p class="text-sm mt-2 font-medium" aria-label="Price: {{ item.final_price | money }}">
        {{ item.final_price | money }}
      </p>
    </div>

    <a
    href="{{ item.url_to_remove }}"
      class="flex items-center gap-2 text-xs uppercase tracking-widest text-gray-400 hover:text-black focus:text-black focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2 transition-colors mt-4 w-fit rounded"
      aria-label="Remove Classic Cotton T-Shirt from cart"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-trash2 lucide-trash-2"
        aria-hidden="true"
        focusable="false"
      >
        <path d="M10 11v6"></path>
        <path d="M14 11v6"></path>
        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"></path>
        <path d="M3 6h18"></path>
        <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
      </svg>
      Remove
    </a>
  </div>

  <div class="md:col-span-4 flex flex-col items-end justify-between">
        <noscript>

      <div class="quantity-selector">
  <label for="quantity">Quantity:</label>
  <input 
    type="number" 
    id="quantity" 
    name="updates[{{ item.key }}]" 
    min="1" 
    max="99" 
    step="1" 
    value="{{ item.quantity }}"
    inputmode="numeric" 

  >
</div>
        </noscript>


    <div
      class="flex items-center border border-black w-fit"
      role="group"
      aria-label="Quantity controls for Classic Cotton T-Shirt"
    >
      <button
        class="p-2 hover:bg-gray-100 focus:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-black transition-colors disabled:opacity-30 disabled:cursor-not-allowed"
        aria-label="Decrease quantity by 1"
        disabled
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
          focusable="false"
        >
          <path d="M5 12h14"></path>
        </svg>
      </button>
      <span class="w-10 text-center font-medium text-sm" aria-label="Current quantity: {{ item.quantity }}">
        {{ item.quantity }}
      </span>
      <button
        class="p-2 hover:bg-gray-100 focus:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-black transition-colors"
        aria-label="Increase quantity by 1"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
          focusable="false"
        >
          <path d="M5 12h14"></path>
          <path d="M12 5v14"></path>
        </svg>
      </button>
    </div>

    <p class="text-lg font-medium mt-4" aria-label="Item total:{{ item.final_line_price | money }}">
      {{ item.final_line_price | money }}
    </p>
  </div>
</li>
