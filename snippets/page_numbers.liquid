<nav class="mt-20 flex items-center justify-center gap-2" aria-label="Pagination">
  {%- if paginate.previous -%}
    <a
      href="{{ paginate.previous.url }}"
      class="flex items-center gap-2 text-[10px] font-bold tracking-widest uppercase border border-zinc-200 px-5 py-3 hover:border-zinc-900 hover:bg-zinc-900 hover:text-white transition-all"
      aria-label="Previous page"
      rel="prev"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="m15 18-6-6 6-6"/>
      </svg>
      Prev
    </a>
  {%- else -%}
    <span
      class="flex items-center gap-2 text-[10px] font-bold tracking-widest uppercase border border-zinc-100 px-5 py-3 text-zinc-300 cursor-not-allowed"
      aria-disabled="true"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="m15 18-6-6 6-6"/>
      </svg>
      Prev
    </span>
  {%- endif -%}

  <!-- Page number links -->
  <div class="flex items-center gap-1">
    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <a
          href="{{ part.url }}"
          class="w-10 h-10 flex items-center justify-center text-[10px] font-bold tracking-widest border border-zinc-200 hover:border-zinc-900 transition-all"
          aria-label="Page {{ part.title }}"
        >
          {{ part.title }}
        </a>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <span
            class="w-10 h-10 flex items-center justify-center text-[10px] font-bold tracking-widest border border-zinc-900 bg-zinc-900 text-white"
            aria-current="page"
            aria-label="Current page, page {{ part.title }}"
          >
            {{ part.title }}
          </span>
        {%- else -%}
          <span class="w-10 h-10 flex items-center justify-center text-[10px] font-bold tracking-widest text-zinc-400">
            &hellip;
          </span>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </div>

  {%- if paginate.next -%}
    <a
      href="{{ paginate.next.url }}"
      class="flex items-center gap-2 text-[10px] font-bold tracking-widest uppercase border border-zinc-200 px-5 py-3 hover:border-zinc-900 hover:bg-zinc-900 hover:text-white transition-all"
      aria-label="Next page"
      rel="next"
    >
      Next
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="m9 18 6-6-6-6"/>
      </svg>
    </a>
  {%- else -%}
    <span
      class="flex items-center gap-2 text-[10px] font-bold tracking-widest uppercase border border-zinc-100 px-5 py-3 text-zinc-300 cursor-not-allowed"
      aria-disabled="true"
    >
      Next
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="m9 18 6-6-6-6"/>
      </svg>
    </span>
  {%- endif -%}
</nav>
