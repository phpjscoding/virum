<article class="flex-col group" role="listitem">
  <div class="relative aspect-[3/4] overflow-hidden bg-zinc-50 mb-6">
    <img
      alt="Aurelia Crystal Flute - elegant crystal champagne flute"
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      src="https://images.unsplash.com/photo-1517951052671-50e5e01c969b?auto=format&fit=crop&q=80&w=800"
      loading="lazy"
      width="280"
      height="480"
    >

    <!-- Badges -->
    <div class="absolute top-4 left-4 flex flex-col  gap-2" aria-label="Product badges">
      <span class="bg-white text-zinc-900 px-3 py-1 text-[9px] font-bold tracking-widest uppercase shadow-sm">
        New
      </span>
    </div>

    <!-- Quick Action Buttons -->
    <div class="absolute inset-0 bg-black/5 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-3">
      <button
        class="bg-white text-zinc-900 p-3 hover:bg-zinc-900 hover:text-white transition-colors"
        aria-label="Quick view Aurelia Crystal Flute"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <path d="M2.062 12.348a1 1 0 0 1 0-.696 10.75 10.75 0 0 1 19.876 0 1 1 0 0 1 0 .696 10.75 10.75 0 0 1-19.876 0"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg>
      </button>
      <button
        class="bg-white text-zinc-900 p-3 hover:bg-zinc-900 hover:text-white transition-colors"
        aria-label="Add Aurelia Crystal Flute to cart"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <circle cx="8" cy="21" r="1"></circle>
          <circle cx="19" cy="21" r="1"></circle>
          <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"></path>
        </svg>
      </button>
    </div>
  </div>

  <div class="text-center">
    <p class="text-zinc-400 text-[10px] tracking-widest uppercase mb-2">Drinkware</p>
    <h3 class="text-lg text-zinc-900 mb-2">
      <a href="/products/aurelia-crystal-flute" class="hover:text-zinc-600 transition-colors">
        Aurelia Crystal Flute
      </a>
    </h3>
    <p class="font-medium text-zinc-700 font-sans tracking-wide" aria-label="Price">$45.00</p>
  </div>
</article>

