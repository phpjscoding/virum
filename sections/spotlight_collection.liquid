<section class="py-24 bg-[#f8f8f8] overflow-hidden" aria-labelledby="spotlight-heading">
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      {%- comment -%} ── Gallery column ── {%- endcomment -%}
      <div
        class="grid grid-cols-2 gap-4"
        role="img"
        aria-label="{{ section.settings.gallery_aria_label | escape }}"
      >
        {%- comment -%} Left sub-column: tall image + square image {%- endcomment -%}
        <div class="space-y-4 pt-12">
          <div class="aspect-[3/4] overflow-hidden">
            {%- if section.settings.image_1 != blank -%}
              {{
                section.settings.image_1
                | image_url: width: 600
                | image_tag:
                  alt: section.settings.image_1_alt,
                  class: 'w-full h-full object-cover hover:scale-110 transition-transform duration-[2000ms]',
                  loading: 'lazy',
                  width: 400,
                  height: 533
              }}
            {%- else -%}
              <img
                alt="{{ section.settings.image_1_alt | escape }}"
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-[2000ms]"
                src="{{ section.settings.image_1_url }}"
                loading="lazy"
                width="400"
                height="533"
              >
            {%- endif -%}
          </div>
          <div class="aspect-square overflow-hidden">
            {%- if section.settings.image_2 != blank -%}
              {{
                section.settings.image_2
                | image_url: width: 600
                | image_tag:
                  alt: section.settings.image_2_alt,
                  class: 'w-full h-full object-cover hover:scale-110 transition-transform duration-[2000ms]',
                  loading: 'lazy',
                  width: 400,
                  height: 533
              }}
            {%- else -%}
              <img
                alt="{{ section.settings.image_2_alt | escape }}"
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-[2000ms]"
                src="{{ section.settings.image_2_url }}"
                loading="lazy"
                width="400"
                height="533"
              >
            {%- endif -%}
          </div>
        </div>

        {%- comment -%} Right sub-column: tall image + quote card {%- endcomment -%}
        <div class="space-y-4">
          <div class="aspect-[3/4] overflow-hidden">
            {%- if section.settings.image_3 != blank -%}
              {{
                section.settings.image_3
                | image_url: width: 600
                | image_tag:
                  alt: section.settings.image_3_alt,
                  class: 'w-full h-full object-cover hover:scale-110 transition-transform duration-[2000ms]',
                  loading: 'lazy',
                  width: 400,
                  height: 533
              }}
            {%- else -%}
              <img
                alt="{{ section.settings.image_3_alt | escape }}"
                class="w-full h-full object-cover hover:scale-110 transition-transform duration-[2000ms]"
                src="{{ section.settings.image_3_url }}"
                loading="lazy"
                width="400"
                height="533"
              >
            {%- endif -%}
          </div>
          <div class="bg-zinc-900 aspect-square flex items-center justify-center text-center p-8">
            <blockquote class="text-white font-serif italic text-2xl">
              <p>{{ section.settings.quote_text }}</p>
            </blockquote>
          </div>
        </div>
      </div>

      {%- comment -%} ── Content column ── {%- endcomment -%}
      <div class="lg:pl-12">
        <p class="text-zinc-500 text-[10px] font-bold tracking-[0.4em] uppercase mb-6">
          {{ section.settings.eyebrow_text }}
        </p>
        <h2 id="spotlight-heading" class="text-5xl md:text-6xl text-zinc-900 mb-8 leading-tight">
          {{ section.settings.heading_line_1 }}
          {%- if section.settings.heading_line_2 != blank -%}
            <br>
            <em class="italic">{{ section.settings.heading_line_2 }}</em>
          {%- endif -%}
        </h2>
        <p class="text-lg text-zinc-600 mb-10 leading-relaxed max-w-lg">
          {{ section.settings.description }}
        </p>

        {%- comment -%} Feature bullet list from blocks {%- endcomment -%}
        {%- if section.blocks.size > 0 -%}
          <ul class="space-y-4 mb-12 text-zinc-700 font-sans">
            {%- for block in section.blocks -%}
              {%- if block.type == 'feature_item' -%}
                <li class="flex items-center gap-3" {{ block.shopify_attributes }}>
                  <span class="w-1.5 h-1.5 rounded-full bg-zinc-900 flex-shrink-0" aria-hidden="true"></span>
                  {{ block.settings.feature_text }}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>
        {%- endif -%}

        <a
          href="{{ section.settings.button_url }}"
          class="group inline-flex items-center gap-4 bg-zinc-900 text-white px-10 py-5 font-bold tracking-widest uppercase text-xs hover:bg-zinc-800 transition-all"
        >
          {{ section.settings.button_label }}
          <span class="w-10 h-px bg-white group-hover:w-16 transition-all duration-500" aria-hidden="true"></span>
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
