<div class="cursor-pointer">
  <section
    aria-labelledby="heritage-heading"
    class="relative py-24 bg-white overflow-hidden"
  >
    <!-- Hidden section label for screen readers (optional) -->
    <span id="heritage-section-label" class="sr-only">{{ section.settings.aria_label }}</span>

    <div class="max-w-7xl mx-auto px-4 md:px-8">
      <div class="relative z-10 text-center max-w-3xl mx-auto">
        <!-- Eyebrow text connects to section purpose -->
        <span
          class="text-zinc-500 text-[10px] font-bold tracking-[0.4em] uppercase mb-8 block"
          aria-hidden="true"
        >
          {{ section.settings.eyebrow_text }}
        </span>

        <!-- Main heading becomes the section's accessible name -->
        <h2
          id="heritage-heading"
          class="text-4xl md:text-5xl text-zinc-900 italic mb-8 leading-snug"
        >
          {{ section.settings.heading }}
        </h2>

        <!-- Rest of content... -->
      </div>
    </div>

    <!-- Decorative background text -->
    <div
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none select-none opacity-[0.03] text-[20vw] font-serif leading-none italic"
      aria-hidden="true"
    >
      {{ section.settings.decorative_text }}
    </div>
  </section>
</div>

{% schema %}
{
  "name": "Heritage Section",
  "tag": "section",
  "class": "heritage-section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "Our Heritage",
      "info": "Small uppercase label displayed above the heading."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Clarity, Crafted by Hand",
      "info": "Main section heading. Supports italic styling via CSS."
    },
    {
      "type": "text",
      "id": "decorative_text",
      "label": "Decorative Background Text",
      "default": "Vitrum",
      "info": "Large faded word displayed in the section background. Purely decorative."
    },
    {
      "type": "text",
      "id": "aria_label",
      "label": "Screen Reader Section Label",
      "default": "Brand Heritage",
      "info": "Hidden label read by screen readers to describe this section."
    }
  ],
  "presets": [
    {
      "name": "Heritage Section",
      "category": "Brand"
    }
  ]
}
{% endschema %}
