<section
  aria-labelledby="newsletter-heading"
  aria-describedby="newsletter-description"
  class="py-24 bg-[#1a1a1a] text-white"
>
  <div class="max-w-4xl mx-auto px-4 text-center">
    <!-- Eyebrow text - decorative only -->
    <span
      class="text-white/40 text-[10px] font-bold tracking-[0.5em] uppercase mb-6 block"
      aria-hidden="true"
    >
      The Vitrum Journal
    </span>

    <!-- Main heading - becomes section's accessible name -->
    <h2
      id="newsletter-heading"
      class="text-4xl md:text-5xl italic mb-6"
    >
      Join Our Inner Circle
    </h2>

    <!-- Section description - provides context -->
    <p
      id="newsletter-description"
      class="text-white/60 mb-12 text-lg font-sans font-light"
    >
      Sign up to receive collection previews, artisan stories, and 10% off your first order.
    </p>

    <!-- Newsletter Form -->
    <form
      class="flex flex-col sm:flex-row max-w-lg mx-auto gap-0 border border-white/20"
      aria-labelledby="newsletter-heading"
    >
      <!-- Email input with proper labeling -->
      <div class="relative flex-1">
        <label for="newsletter-email" class="sr-only"> Email address for newsletter subscription </label>
        <input
          id="newsletter-email"
          name="email"
          type="email"
          inputmode="email"
          autocomplete="email"
          placeholder="Enter your email address"
          class="
            w-full bg-transparent px-6 py-5 outline-none font-sans text-sm
            focus:bg-white/5 transition-colors
            focus:ring-2 focus:ring-white focus:ring-inset
            placeholder:text-white/30
          "
          required
          aria-required="true"
          aria-describedby="email-format-hint"
        >
        <span id="email-format-hint" class="sr-only"> Please enter a valid email address, like name@example.com </span>
      </div>

      <button
        type="submit"
        class="
          bg-white text-zinc-900 px-10 py-5 font-bold tracking-[0.2em] uppercase text-xs
          hover:bg-zinc-200 transition-colors
          focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-[#1a1a1a]
          disabled:opacity-50 disabled:cursor-not-allowed
        "
        aria-label="Subscribe to newsletter"
      >
        Subscribe
      </button>
    </form>

    <!-- Footer note with privacy assurance -->
    <p
      class="mt-8 text-[10px] text-white/30 tracking-widest uppercase"
      aria-label="Privacy assurance"
    >
      <span class="sr-only">Privacy notice: </span>
      No spam. Only beauty. Unsubscribe at any time.
    </p>

    <!-- Hidden confirmation message area (for future enhancement) -->
    <div
      id="newsletter-status"
      class="sr-only"
      role="status"
      aria-live="polite"
      aria-atomic="true"
    ></div>
  </div>
</section>
