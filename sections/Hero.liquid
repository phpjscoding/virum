<section
  class="relative h-[90vh] md:h-screen w-full flex items-center overflow-hidden"
  aria-label="{{ section.settings.aria_label | escape }}"
>
  <!-- Background Image with Overlay -->
  <div
    class="absolute inset-0 z-0 bg-cover bg-center transition-transform duration-[10000ms] ease-out scale-105 hover:scale-100"
    style="background-image: url('{{ section.settings.background_image | image_url: width: 2000 | default: 'https://images.unsplash.com/photo-1574936145840-28808d77a0b6?auto=format&fit=crop&q=80&w=2000' }}');"
    role="img"
    aria-label="{{ section.settings.background_image_alt | escape }}"
  >
    <div class="absolute inset-0 bg-gradient-to-br from-black/20 via-black/10 to-transparent"></div>
  </div>

  <!-- Content Container -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 md:px-8 w-full pt-20">
    <div class="glass-effect max-w-2xl p-8 md:p-16 rounded-sm border border-white/30 shadow-2xl">
      <!-- Eyebrow Text -->
      {% if section.settings.eyebrow_text != blank %}
        <span class="text-zinc-800 text-xs font-bold tracking-[0.4em] uppercase mb-6 block">
          {{ section.settings.eyebrow_text }}
        </span>
      {% endif %}

      <!-- Heading -->
      {% if section.settings.heading != blank %}
        <h1 class="text-5xl md:text-7xl lg:text-8xl text-zinc-900 mb-8 leading-[1.1] font-light">
          {{ section.settings.heading }}
        </h1>
      {% endif %}

      <!-- Description -->
      {% if section.settings.description != blank %}
        <p class="text-lg md:text-xl text-zinc-700 mb-10 leading-relaxed max-w-lg">
          {{ section.settings.description }}
        </p>
      {% endif %}

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4">
        {% if section.settings.primary_button_label != blank %}
          <a
            href="{{ section.settings.primary_button_url }}"
            class="inline-block px-10 py-5 bg-zinc-900 text-white font-bold tracking-widest uppercase text-xs hover:bg-zinc-800 transition-all duration-300 transform hover:-translate-y-0.5 hover:shadow-lg text-center"
            aria-label="{{ section.settings.primary_button_aria | default: section.settings.primary_button_label | escape }}"
          >
            {{ section.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if section.settings.secondary_button_label != blank %}
          <a
            href="{{ section.settings.secondary_button_url }}"
            class="inline-block px-10 py-5 bg-transparent border-2 border-zinc-900 text-zinc-900 font-bold tracking-widest uppercase text-xs hover:bg-zinc-900 hover:text-white transition-all duration-300 transform hover:-translate-y-0.5 text-center"
            aria-label="{{ section.settings.secondary_button_aria | default: section.settings.secondary_button_label | escape }}"
          >
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Bottom Gradient Fade -->
  <div
    class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white to-transparent pointer-events-none"
  ></div>
</section>

<style>
  .header_nav {
    transition: all 0.3s ease-in-out;
  }
  .glass-effect {
    background-color: #fff3;
    position: relative;
    box-shadow: inset -1px -1px 16px 3px #fff;
    backdrop-filter: blur(10px);
  }
</style>

<script>
  const navbar = document.querySelector('.header_nav');
  const SCROLL_THRESHOLD = 50;
  let lastScroll = 0;

  function handleScroll() {
    const currentScroll = window.scrollY;

    if (currentScroll > SCROLL_THRESHOLD && lastScroll <= SCROLL_THRESHOLD) {
      navbar.classList.remove('bg-transparent', 'py-5');
      navbar.classList.add('bg-white', 'shadow-sm', 'py-3', 'backdrop-blur-sm', 'bg-white/80');
    } else if (currentScroll <= SCROLL_THRESHOLD && lastScroll > SCROLL_THRESHOLD) {
      navbar.classList.remove('bg-white', 'shadow-sm', 'py-3', 'backdrop-blur-sm', 'bg-white/80');
      navbar.classList.add('bg-transparent', 'py-5');
    }

    lastScroll = currentScroll;
  }

  let scrollTimeout;
  window.addEventListener('scroll', function () {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(handleScroll, 10);
  });

  window.addEventListener('load', handleScroll);
</script>

