<section class="py-20 border-y border-zinc-100 bg-white" aria-labelledby="features-heading-{{ section.id }}">
  <div class="max-w-7xl mx-auto px-4 md:px-8">
    <h2 id="features-heading-{{ section.id }}" class="sr-only">{{ section.settings.section_aria_label }}</h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12" role="list">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature_item' -%}
            <li class="flex flex-col items-center text-center space-y-4 group" {{ block.shopify_attributes }}>
              <div
                class="w-12 h-12 flex items-center justify-center rounded-full bg-zinc-50 group-hover:bg-zinc-900 group-hover:text-white transition-colors duration-500"
                aria-hidden="true"
              >
                {%- case block.settings.icon -%}
                  {%- when 'diamond' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M2.7 10.3a2.41 2.41 0 0 0 0 3.41l7.59 7.59a2.41 2.41 0 0 0 3.41 0l7.59-7.59a2.41 2.41 0 0 0 0-3.41l-7.59-7.59a2.41 2.41 0 0 0-3.41 0Z"></path>
                    </svg>
                  {%- when 'truck' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"></path>
                      <path d="M15 18H9"></path>
                      <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"></path>
                      <circle cx="17" cy="18" r="2"></circle>
                      <circle cx="7" cy="18" r="2"></circle>
                    </svg>
                  {%- when 'sparkles' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M11.017 2.814a1 1 0 0 1 1.966 0l1.051 5.558a2 2 0 0 0 1.594 1.594l5.558 1.051a1 1 0 0 1 0 1.966l-5.558 1.051a2 2 0 0 0-1.594 1.594l-1.051 5.558a1 1 0 0 1-1.966 0l-1.051-5.558a2 2 0 0 0-1.594-1.594l-5.558-1.051a1 1 0 0 1 0-1.966l5.558-1.051a2 2 0 0 0 1.594-1.594z"></path>
                      <path d="M20 2v4"></path>
                      <path d="M22 4h-4"></path>
                      <circle cx="4" cy="20" r="2"></circle>
                    </svg>
                  {%- when 'shield-check' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"></path>
                      <path d="m9 12 2 2 4-4"></path>
                    </svg>
                  {%- when 'star' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                  {%- when 'heart' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path>
                    </svg>
                  {%- when 'leaf' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z"></path>
                      <path d="M2 21c0-3 1.85-5.36 5.08-6C9.5 14.52 12 13 13 12"></path>
                    </svg>
                  {%- when 'zap' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"></path>
                    </svg>
                  {%- when 'globe' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="12" cy="12" r="10"></circle>
                      <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path>
                      <path d="M2 12h20"></path>
                    </svg>
                  {%- when 'lock' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"></rect>
                      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                  {%- when 'recycle' -%}
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M7 19H4.815a1.83 1.83 0 0 1-1.57-2.763L7.04 7.144"></path>
                      <path d="M9.156 7.144 10.48 5a1.83 1.83 0 0 1 3.164.042l5.765 10.093"></path>
                      <path d="M15 12l1.5 2.5L19 12"></path>
                      <path d="M4.5 12 3 9.5 5.5 9"></path>
                      <path d="m12 19-1.5-2.5L13 15"></path>
                    </svg>
                {%- endcase -%}
              </div>
              <div>
                {%- if block.settings.heading != blank -%}
                  <h3 class="text-xs font-bold tracking-[0.2em] uppercase mb-1 text-zinc-900">
                    {{ block.settings.heading }}
                  </h3>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <p class="text-sm text-zinc-500 leading-relaxed font-sans font-light">
                    {{ block.settings.description }}
                  </p>
                {%- endif -%}
              </div>
            </li>
        {%- endcase -%}
      {%- endfor -%}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Features Bar",
  "tag": "section",
  "class": "features-bar-section",
  "settings": [
    {
      "type": "text",
      "id": "section_aria_label",
      "label": "Screen reader section label",
      "default": "Product Features",
      "info": "Accessible label for screen readers. Not visible on the page."
    }
  ],
  "blocks": [
    {
      "type": "feature_item",
      "name": "Feature Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "diamond",
          "options": [
            { "value": "diamond", "label": "Diamond" },
            { "value": "truck", "label": "Truck" },
            { "value": "sparkles", "label": "Sparkles" },
            { "value": "shield-check", "label": "Shield Check" },
            { "value": "star", "label": "Star" },
            { "value": "heart", "label": "Heart" },
            { "value": "leaf", "label": "Leaf" },
            { "value": "zap", "label": "Zap" },
            { "value": "globe", "label": "Globe" },
            { "value": "lock", "label": "Lock" },
            { "value": "recycle", "label": "Recycle" }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Feature Name"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Brief description of this feature or benefit."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Bar",
      "blocks": [
        {
          "type": "feature_item",
          "settings": {
            "icon": "diamond",
            "heading": "Premium Quality",
            "description": "Crafted from high-grade borosilicate glass"
          }
        },
        {
          "type": "feature_item",
          "settings": {
            "icon": "truck",
            "heading": "Safe Shipping",
            "description": "Secure custom packaging and global transit"
          }
        },
        {
          "type": "feature_item",
          "settings": {
            "icon": "sparkles",
            "heading": "Dishwasher Safe",
            "description": "Designed for everyday elegance and ease"
          }
        },
        {
          "type": "feature_item",
          "settings": {
            "icon": "shield-check",
            "heading": "Satisfaction",
            "description": "30-day effortless return guarantee"
          }
        }
      ]
    }
  ],
  "max_blocks": 8
}
{% endschema %}
